<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_filter"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <com.deal.exap.customviews.MyTextViewLightCustom
            android:id="@+id/et_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/white_bg_border"
            android:drawableRight="@drawable/notification_btn"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="right|center_vertical"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="10sp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="4"
            android:baselineAligned="true"
            android:weightSum="2">

            <com.deal.exap.customviews.MyButtonViewSemi
                android:id="@+id/btn_km"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_filter"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:minHeight="40dp"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="10sp"
                android:text="@string/txt_filter_distance_unit_km"
                android:textAllCaps="false" />

            <com.deal.exap.customviews.MyButtonViewSemi
                android:id="@+id/btn_miles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_filter"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:minHeight="40dp"
                android:padding="5dp"
                android:singleLine="true"
                android:text="@string/txt_filter_distance_unit_miles"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <com.deal.exap.customviews.MyTextViewLight14
            style="@style/tv_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/txt_distance"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_distance_htl"
                style="@style/btn_style_small"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/toggle_right_selector"
                android:minHeight="0dp"
                android:text="@string/txt_high_to_low"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_distance_lth"
                style="@style/btn_style_small"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/toggle_left_selector"
                android:minHeight="0dp"
                android:text="@string/txt_low_to_high"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <com.deal.exap.customviews.MyTextViewLight14
            style="@style/tv_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/txt_discount"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_discount_htl"
                style="@style/btn_style_small"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/toggle_right_selector"
                android:minHeight="0dp"

                android:text="@string/txt_high_to_low"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_discount_lth"
                style="@style/btn_style_small"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/toggle_left_selector"
                android:minHeight="0dp"

                android:text="@string/txt_low_to_high"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <com.deal.exap.customviews.MyTextViewLight14
            style="@style/tv_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/txt_end_date"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_date_stl"
                style="@style/btn_style_small"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/toggle_right_selector"
                android:minHeight="0dp"
                android:text="@string/txt_sooner_to_later"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_date_lts"
                style="@style/btn_style_small"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/toggle_left_selector"
                android:minHeight="0dp"
                android:text="@string/txt_later_to_sooner"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>