<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/slide_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight=".7">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:src="@drawable/payment_type_icon"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".8"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp">

                    <com.deal.exap.customviews.MyTextViewRegCustom
                        android:id="@+id/txt_discount_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_off"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <com.deal.exap.customviews.MyTextViewLightCustom
                        android:id="@+id/txt_on_which"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_on_off"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.deal.exap.customviews.MyTextViewLightCustom
                            android:id="@+id/txt_distance_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_distance_val"
                            android:textColor="@color/white"
                            android:textSize="8sp" />

                        <com.deal.exap.customviews.MyTextViewLightCustom
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/white"
                            android:textSize="8sp" />


                        <com.deal.exap.customviews.MyTextViewLightCustom
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_distance"
                            android:textColor="@color/white"
                            android:textSize="8sp" />


                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:background="@color/gray_light"></View>

                        <com.deal.exap.customviews.MyTextViewLightCustom
                            android:id="@+id/txt_end_date_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 sep 2015"
                            android:textColor="@color/white"
                            android:textSize="8sp" />


                        <com.deal.exap.customviews.MyTextViewLightCustom
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="@color/white"
                            android:textSize="8sp" />


                        <com.deal.exap.customviews.MyTextViewLightCustom
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_end_date"
                            android:textColor="@color/white"
                            android:textSize="8sp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/txt_outer_border_grey"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.deal.exap.customviews.MyTextViewRegCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="USD 10"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <com.deal.exap.customviews.MyTextViewLightCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="USD 15"
                        android:textColor="@color/white"
                        android:textSize="6sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill_horizontal"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">


                    <com.deal.exap.customviews.MyTextViewRegCustom
                        android:id="@+id/txt_no_of_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:text="(15)"
                        android:textColor="@color/white"
                        android:textSize="6sp" />

                    <RatingBar
                        android:id="@+id/rating_bar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5.0"
                        android:stepSize="1.0" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>