<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/slide_img" />

                <ImageView
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginBottom="20dp"
                    android:padding="5dp"
                    android:src="@drawable/share_active_icon" />

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back_btn" />

                <!--<ImageView-->
                <!--android:id="@+id/iv_chat"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="right"-->
                <!--android:padding="5dp"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/chat_btn" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".7">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/img_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2"
                            android:src="@drawable/burger_king"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="1dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".8"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="5dp"
                            android:paddingTop="3dp">

                            <com.deal.exap.customviews.MyTextViewRegCustom
                                android:id="@+id/txt_discount_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="35% off"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <com.deal.exap.customviews.MyTextViewLightCustom
                                android:id="@+id/txt_on_which"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/on_fanta_pride"
                                android:textColor="@color/white"
                                android:textSize="10sp" />


                            <com.deal.exap.customviews.MyTextViewLightCustom
                                android:id="@+id/txt_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/nav_nearby_icon"
                                android:gravity="center_vertical"
                                android:text="@string/street_berlin"
                                android:textColor="@color/white"
                                android:textSize="10sp" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.deal.exap.customviews.MyButtonViewRegCustom
                            android:id="@+id/btn_purchase"
                            style="@style/btn_style_small"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:background="@drawable/btn_green_bcg_shape"
                            android:text="@string/txt_buy"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="right">

                            <RatingBar
                                android:id="@+id/rating_bar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="5.0"
                                android:stepSize="1.0" />


                            <com.deal.exap.customviews.MyTextViewReg14
                                android:id="@+id/txt_review"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="(15)"
                                android:textColor="@color/white"
                                android:textSize="6sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_light"
                    android:orientation="horizontal"
                    android:weightSum="1.2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.deal.exap.customviews.MyTextViewRegCustom
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/txt_end_date"
                            android:textSize="10sp" />


                        <com.deal.exap.customviews.MyTextViewRegCustom
                            android:id="@+id/txt_end_date_val"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="30th Nov"
                            android:textColor="@color/btn_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/boundary_color" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.deal.exap.customviews.MyTextViewRegCustom
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/redeemed"
                            android:textSize="10sp" />

                        <com.deal.exap.customviews.MyTextViewRegCustom
                            android:id="@+id/txt_redeemed_val"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="456"
                            android:textColor="@color/btn_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/boundary_color" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.deal.exap.customviews.MyTextViewRegCustom
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/txt_distance"
                            android:textSize="10sp" />

                        <com.deal.exap.customviews.MyTextViewRegCustom
                            android:id="@+id/txt_distance_val"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textColor="@color/btn_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>


                <com.deal.exap.customviews.MyTextViewRegCustom
                    android:id="@+id/txt_redeem_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="@string/txt_store_online"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.deal.exap.customviews.MyTextViewLightCustom
                    android:id="@+id/txt_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="@string/txt_store_dis"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <com.deal.exap.customviews.MyTextViewRegCustom
                            android:id="@+id/txt_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="35%"
                            android:textSize="18sp" />

                        <com.deal.exap.customviews.MyTextViewRegCustom
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/txt_discount_per"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <com.deal.exap.customviews.MyTextViewRegCustom
                            android:id="@+id/txt_store_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="$10"
                            android:textSize="18sp" />

                        <com.deal.exap.customviews.MyTextViewRegCustom
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/txt_store_price"
                            android:textSize="14sp" />

                    </LinearLayout>


                </LinearLayout>

                <!--<com.deal.exap.customviews.MyTextViewSemiCustom-->
                <!--style="@style/tv_normal"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:drawableLeft="@drawable/clock_icon"-->
                <!--android:drawablePadding="10dp"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:text="@string/txt_time_left"-->
                <!--android:textColor="@color/btn_green_color" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <com.deal.exap.customviews.MyTextViewRegCustom
                        android:id="@+id/txt_customer_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_cutomer_review"
                        android:textColor="@color/btn_color"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/btn_color"></View>

                    <com.deal.exap.customviews.MyTextViewRegCustom
                        android:id="@+id/txt_terms_conditions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/txt_term_condition"
                        android:textColor="@color/btn_color"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_light" />


        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight=".5"-->
        <!--android:padding="10dp">-->

        <!--<com.deal.exap.customviews.MyButtonViewSemi-->
