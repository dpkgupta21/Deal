<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context="com.deal.exap.customerfeedback.CustomerFeedBackActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header_transparent" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">


        <ListView
            android:id="@+id/list_view_feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            android:dividerHeight="20dp" />

        <TextView
            android:id="@+id/txt_blank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="No Message found"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="gone" />


    </RelativeLayout>

    <Button
        android:id="@+id/btn_post_comments"
        style="@style/btn_style"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="@string/btn_rate" />
</RelativeLayout>
