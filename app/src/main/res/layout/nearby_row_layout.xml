<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/slide_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:padding="3dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:src="@drawable/payment_type_icon"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:orientation="vertical">

                    <com.deal.exap.customviews.MyTextViewReg14
                        android:id="@+id/txt_discount_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35% off"
                        android:textColor="@color/white" />

                    <com.deal.exap.customviews.MyTextViewReg14
                        android:id="@+id/txt_on_which"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="on Fanta Pride"
                        android:textColor="@color/white" />

                    <com.deal.exap.customviews.MyTextViewLight14
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date:30 sep 2015"
                        android:textColor="@color/white" />

                    <com.deal.exap.customviews.MyTextViewLight14
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance 1.5 KM"
                        android:textColor="@color/white" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_light"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight=".4"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/txt_outer_border_grey"
                    android:orientation="vertical">

                    <com.deal.exap.customviews.MyTextViewReg14
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="USD 10"
                        android:textColor="@color/white" />

                    <com.deal.exap.customviews.MyTextViewLight14
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="USD 15"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heart_fill_icon" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heart_fill_icon" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heart_fill_icon" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heart_fill_icon" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heart_icon" />

                    <com.deal.exap.customviews.MyTextViewReg14
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="(15)"
                        android:textSize="8sp"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>