<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/slide_img" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/share_active_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:src="@drawable/payment_type_icon"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".8"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp">

                    <com.deal.exap.customviews.MyTextViewRegCustom
                        android:id="@+id/txt_discount_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35% off"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <com.deal.exap.customviews.MyTextViewLightCustom
                        android:id="@+id/txt_on_which"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="on Fanta Pride"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <com.deal.exap.customviews.MyTextViewLightCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date:30 sep 2015 Distance 1.5 KM"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <com.deal.exap.customviews.MyTextViewLight14
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance 1.5 KM"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/txt_outer_border_grey"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.deal.exap.customviews.MyTextViewRegCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="USD 10"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <com.deal.exap.customviews.MyTextViewLightCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="USD 15"
                        android:textColor="@color/white"
                        android:textSize="6sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <RatingBar
                        android:id="@+id/rating_bar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="3"
                        android:stepSize="1.0" />

                    <com.deal.exap.customviews.MyTextViewRegCustom
                        android:id="@+id/txt_no_of_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="(15)"
                        android:textColor="@color/white"
                        android:textSize="6sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</android.support.v7.widget.CardView>